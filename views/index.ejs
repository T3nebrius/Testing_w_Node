<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ejecutor de Scripts</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body class="bg-light">
    <div class="container py-5">
        <h1 class="text-center mb-4">Ejecutor de Scripts</h1>
        
        <form id="scriptForm" class="card shadow p-4">
            <h2 class="mb-3">Selecciona los scripts a ejecutar</h2>
            <div class="mb-4">
                <% scripts.forEach(script => { %>
                    <div class="form-check">
                        <input 
                            class="form-check-input" 
                            type="checkbox" 
                            name="selectedScripts" 
                            value="<%= script %>" 
                            id="<%= script %>"
                        >
                        <label class="form-check-label" for="<%= script %>">
                            <%= script %>
                        </label>
                    </div>
                <% }); %>
            </div>

            <h2 class="mb-3">Parámetros de ejecución</h2>
            <div class="mb-3">
                <label for="headless" class="form-label">Ocultar Simulación:</label>
                <select name="headless" id="headless" class="form-select">
                    <option value="true">Sí</option>
                    <option value="false">No</option>
                </select>
            </div>
            <div class="mb-4">
                <label for="resolution" class="form-label">Resolución:</label>
                <input 
                    type="text" 
                    name="resolution" 
                    id="resolution" 
                    class="form-control" 
                    placeholder="Ej: 1920x1080"
                >
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-primary btn-lg">Ejecutar Scripts</button>
            </div>
        </form>

        <h2 class="mt-5">Logs</h2>
        <div id="logs" class="bg-white p-3 border rounded" style="height: 300px; overflow-y: auto;">
            <!-- Los logs aparecerán aquí -->
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/socket.io/socket.io.js"></script>
    <script src="/app.js"></script>
</body>
</html>
